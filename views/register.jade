extends layout

block content
	h1 Register
	p Please register using the form bellow
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form(method='post', action='/users/register', enctype='multipart/form-data')
		.form-group
			label First Name
			input.form-control(name='fname', type='text', placeholder='Enter first name')
		.form-group
			label Last Name
			input.form-control(name='lname', type='text', placeholder='Enter last name')
		.form-group
			label Email
			input.form-control(name='email', type='email', placeholder='Enter email')
		.form-group
			label Password
			input.form-control(name='password', type='password', placeholder='Enter Password')
		.form-group
			label Confirm Password
			input.form-control(name='confirmpassword', type='password', placeholder='Confirm password')
		.form-group
			label Profile Image
			input.form-control(name='profileimage', type='file')
		input.btn.btn-success(name='submit', type='submit', value='Register')

		br
