extends layout

block content
	h1 Login
	p Please Login using the form below
	form(method='post', action='/users/login')
		.form-group
			label Email
			input.form-control(name='email', type='email', placeholder='Enter email')
		.form-group
			label Password
			input.form-control(name='password', type='password', placeholder='Enter password')
		input.btn.btn-success(name='submit', type='submit', value='Log in')