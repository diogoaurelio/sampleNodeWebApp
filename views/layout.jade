doctype html
html
  head
    title #{title}: Express Website
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    meta( name='viewport', content='width=device-width, initial-scale=1.0' )
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-default.navbar-fixed-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar',aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle Navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') Express Website
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li(class=(title === 'Data Science Casts Home' ? 'active' : ''))
                            a(href='/') Home
                        li(class=(title === 'About' ? 'active' : ''))
                            a(href='/about') About Us
                        li(class=(title === 'Contacts' ? 'active' : ''))
                            a(href='/contact') Contact
                        li(class=(title == 'Register' || title == 'Login' ? 'active dropdown' : 'dropdown'))
                            a(href='#' class='dropdown-toggle', data-toggle='dropdown', role='button',  aria-expanded='false' ) 
                                | Sign up / in 
                                span(class='caret')
                            ul(class='dropdown-menu')
                                li(class=(title == 'Register' ? 'active' : '')) 
                                    a(href='/users/register') Sign Up
                                li(class='divider')
                                li(class=(title == 'Login' ? 'active': '')) 
                                    a(href='/users/login') Log in
                                li(class='divider')
                                li
                                    a(href='/users/logout') Logout

    block content
    footer
        p &copy; 2015, All Rights Reserved

    script( src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    script( src='/javascripts/bootstrap.min.js' )